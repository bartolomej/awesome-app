<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="in.awesomesearch.app.ui.search.SearchFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_home_to_itemDetails"
            app:destination="@id/details_fragment"
            app:popUpTo="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="in.awesomesearch.app.ui.bookmarks.BookmarksFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_navigation_bookmarks_to_bookmarkEditFragment"
            app:destination="@id/bookmarkEditFragment" />
        <action
            android:id="@+id/action_navigation_bookmarks_to_bookmarkDetailsFragment"
            app:destination="@id/bookmarkDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/details_fragment"
        android:name="in.awesomesearch.app.ui.search.DetailsFragment"
        android:label="fragment_item_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="itemUid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkEditFragment"
        android:name="in.awesomesearch.app.ui.bookmarks.BookmarkEditFragment"
        android:label="fragment_bookmark_edit"
        tools:layout="@layout/fragment_bookmark_edit" >
        <argument
            android:name="bookmarkUid"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkDetailsFragment"
        android:name="in.awesomesearch.app.ui.bookmarks.BookmarkDetailsFragment"
        android:label="fragment_bookmark_details"
        tools:layout="@layout/fragment_bookmark_details" >
        <action
            android:id="@+id/action_bookmarkDetailsFragment_to_bookmarkEditFragment"
            app:destination="@id/bookmarkEditFragment" />
        <argument
            android:name="groupUid"
            app:argType="string" />
    </fragment>

</navigation>
